<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="24dp"
            android:text="点击删除频道"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="#555555"
            android:onClick="doClick"
            android:src="@mipmap/visitor_discover_signup_close" />
    </LinearLayout>

    <jinhanyu.apitest2.custom.GVSelected
        android:id="@+id/gv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="5">

    </jinhanyu.apitest2.custom.GVSelected>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="24dp"
            android:text="点击添加更多频道"
            android:textSize="18dp" />
    </LinearLayout>
    <!--
        android:horizontalSpacing=""//列间距
        android:verticalSpacing=""//行间距
    -->
    <jinhanyu.apitest2.custom.GVUnSelected
        android:id="@+id/gv_unselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="5">

    </jinhanyu.apitest2.custom.GVUnSelected>

</LinearLayout>